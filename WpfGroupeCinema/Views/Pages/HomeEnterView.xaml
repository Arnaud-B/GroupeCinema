<Page x:Class="WpfGroupeCinema.Views.HomeEnterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGroupeCinema.Views"
      xmlns:userControl="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
      mc:Ignorable="d" 
      Title="HomeEnterView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <userControl:CinemaUserControl x:Name="cinemaUserControl" Grid.Row="0" />
        <userControl:CinemaListUserControl x:Name="cinemaListUserControl" Grid.Row="1" />
        <Button x:Name="myBtn" Grid.Row="2" Content="Choose" FontSize="20" Click="myBtn_Click" Margin="10"/>
    </Grid>
</Page>
