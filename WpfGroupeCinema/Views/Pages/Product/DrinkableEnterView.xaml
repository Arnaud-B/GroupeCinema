<Page x:Class="WpfGroupeCinema.Views.DrinkableEnterView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfGroupeCinema.Views"
      xmlns:userControl="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
      mc:Ignorable="d" 
      Title="DrinkableEnterView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <userControl:CinemaUserControl x:Name="cinemaUserControl" Grid.Row="0" />
        <userControl:AddDrinkableUserControl x:Name="addDrinkableUserControl" Grid.Row="1" />
        <userControl:AddItemUserControl x:Name="addItemUserControl" Grid.Row="2"/>
        <userControl:HomeUserControl x:Name="homeUserControl" Grid.Row="3"/>
    </Grid>
</Page>
