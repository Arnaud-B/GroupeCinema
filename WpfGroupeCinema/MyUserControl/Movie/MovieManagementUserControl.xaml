<baseUserControl:BaseUserControl x:Class="WpfGroupeCinema.CinemaListUserControl.MovieManagementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
             xmlns:baseUserControl="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Number movie" FontSize="15" Grid.Row="0" Grid.Column="0" />
        <TextBlock x:Name="numberMovieTxtB" Text="{Binding Number}" Grid.Row="0" Grid.Column="1" FontSize="18"/>
        <Button x:Name="BtnMovie" Content="Movie" Grid.Row="0" Grid.Column="2" Margin="10" FontSize="20"/>
    </Grid>
</baseUserControl:BaseUserControl>
