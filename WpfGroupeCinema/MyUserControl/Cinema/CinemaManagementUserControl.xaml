<baseUserControl:BaseUserControl x:Class="WpfGroupeCinema.CinemaListUserControl.CinemaManagementUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
             xmlns:baseUserControl="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name" FontSize="15" Grid.Row="0" Grid.Column="0" />
        <TextBlock x:Name="cinemaNameTxtB" Text="{Binding Cinema.Name}" Grid.Row="0" Grid.Column="1" FontSize="18"/>
        <Label Content="Capital" FontSize="15" Grid.Row="1" Grid.Column="0" />
        <TextBlock x:Name="cinemaFinanceTxtB" Text="{Binding Cinema.Finance}" Grid.Row="1" Grid.Column="1" FontSize="18"/>
    </Grid>
</baseUserControl:BaseUserControl>
