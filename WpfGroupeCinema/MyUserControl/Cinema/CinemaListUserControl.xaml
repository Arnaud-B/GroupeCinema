<baseUserControl:BaseUserControl 
        x:Class="WpfGroupeCinema.CinemaListUserControl.CinemaListUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
        xmlns:baseUserControl="clr-namespace:WpfGroupeCinema.CinemaListUserControl"
        mc:Ignorable="d">
    <Grid>
        <ListView x:Name="cinemasListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="cinemaNameTxtB" Text="{Binding Name}" Grid.Row="0" Grid.Column="0" FontSize="15"/>
                        <!--<Button x:Name="btnChoose" Grid.Row="1" Content="Choose" FontSize="20" Margin="10"/>-->
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</baseUserControl:BaseUserControl>
